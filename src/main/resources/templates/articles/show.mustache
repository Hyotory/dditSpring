<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Document</title>
    <link rel="stylesheet" href="/adminlte/dist/css/adminlte.min.css" />
    <!-- jQuery -->
    <script src="/adminlte/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script>
        //document 내 모든 엘리먼트가 로딩된 후에 실행
        $(function() {
            // 아작나써유.. (피)씨다타써
            // contentType:
            // dataType:
            $.ajax({
                url: "/api/articles/2",
                type: "get",
                dataType: "json",
                success:function(result) {
                    console.log("result: ",result);
            }
            })
        });
    </script>
</head>
<body>
<h2>글 상세보기</h2>
<table class="table">
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Content</th>
    </tr>
    <!--
    articleEntity : Article(id=1, title=개똥이의 모험, content=즐거운 모험)
    model.addAttribute("article",articleEntity);
    -->
    {{#article}}
        <tr>
            <th>{{id}}</th>
            <th>{{title}}</th>
            <th>{{content}}</th>
        </tr>
    {{/article}}
</table>
<a href="/articles" class="btn btn-primary">목록</a>
<a href="/articles/{{article.id}}/edit" class="btn btn-warning">수정</a>
<a href="/articles/{{article.id}}/delete" class="btn btn-danger">삭제</a>
<!--article 범위에서 벗어났어도 model 의 속성명 사용가능-->

</body>
</html>